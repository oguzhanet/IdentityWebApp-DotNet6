@model UserViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}

<h3 class="text-center"Kullanıcı Bilgileri></h3>

<div class="row">
    <div class="col-sm-1">
        @if (Model.Picture == null)
        {
            <img style="width:170px; height:180px" src="~/DefaultUser.png" />
        }else
        {
            <img style="width:170px; height:180px" src="@Model.Picture" />  
        }
        
    </div>
    <div class="col-sm-6">

        <table class="table table-bordered table-striped">
            <tr>
                <th>User Name</th>
                <td>@Model.UserName</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>@Model.Email</td>
            </tr>
            <tr>
                <th>Phone Number</th>
                <td>@Model.PhoneNumber</td>
            </tr>
            <tr>
                <th>City</th>
                <td>@Model.City</td>
            </tr>
            <tr>
                <th>Birth Date</th>
                <td>@Model.BirthDate.Value.ToShortDateString()</td>
            </tr>
            <tr>
                <th>Gender</th>
                <td>@Model.Gender</td>
            </tr>
        </table>

    </div>
</div>




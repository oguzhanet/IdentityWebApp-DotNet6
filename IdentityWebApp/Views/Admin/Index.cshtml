@model List<AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered table-striped">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Email</th>
    </tr>

    @if (Model.Any())
    {
        foreach (var item in Model)
        {
            <tr>
            <td>@item.Id</td>
            <td>@item.UserName</td>
            <td>@item.Email</td>
        </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="3">Üye bulunmamaktadır.</td>
        </tr>
    }
</table>

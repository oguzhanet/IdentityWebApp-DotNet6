@model IdentityWebApp.Models.ViewModels.ResetPasswordViewModel

@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewBag.status == "success")
{
    <div class="alert alert-info">Password reset link has been sent to your e-mail address.</div>
    <a class="bbtn btn-link" href="/Home/Login/">Return to the login screen.</a>
}else
{
     <div class="row">
        <div class="col-md-4 offset-md-4">
            <h4>I forgot my password</h4>
            <hr />
            <div class="alert alert-info">
                Enter your registered e-mail address to set a new password.
                An e-mail will be sent to your e-mail address to change the password.
            </div>
            <form asp-action="ResetPassword">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group" style="margin-top:10px">
                    <input type="submit" value="Send" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>   
}





